@model HistoryViewModel
<h1>History for @Model.ContributorName</h1>
<h1>Current Balance: @Model.Balance.ToString("C")</h1>
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Action</th>
            <th>Date</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var transaction in Model.History)
            {
                <tr>
                    <td>@transaction.Action</td>
                    <td>@transaction.Date.ToLongDateString()</td>
                    <td>@transaction.Amount.ToString("C")</td>
                </tr>
            }
    </tbody>
</table>
<div style="text-align:center;">
    <a href="/contributors" class="btn btn-danger">Back to contributors</a>
</div>